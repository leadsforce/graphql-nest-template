{
  "$schema": "http://json.schemastore.org/swcrc",
  "module": {
    "type": "commonjs"
  },
  "jsc": {
    "target": "es2020",
    "parser": {
      "syntax": "typescript",
      "decorators": true
    },
    "transform": {
      "decoratorMetadata": true
    },
    "baseUrl": ".",
    "paths": {
      "Api/*": ["./src/api/*"],
      "Config/*": ["./src/config/*"],
      "Domain/*": ["./src/domain/*"],
      "Repo/*": ["./src/repository/*"]
    }
  },
  "sourceMaps": true
}
